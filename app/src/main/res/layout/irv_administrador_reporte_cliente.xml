<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="380sp"
        android:layout_height="100sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:background="@drawable/card_repartidor"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="90sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10sp"
                android:layout_marginTop="13sp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:srcCompat="@drawable/elizabeth" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:text="#33"
                android:textColor="@color/md_theme_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elizabeth Swann"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.5sp"
                android:text="Ãšltimo pedido: 12/12/24 11:11:30"
                android:textColor="@color/md_theme_errorContainer_mediumContrast"
                android:textSize="11.5sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15sp"
                android:backgroundTint="@color/md_theme_secondary"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingLeft="-5sp"
                android:paddingRight="-5sp"
                android:text="30"
                android:textSize="14sp"
                app:backgroundTint="@color/md_theme_secondary" />

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="1.5sp"
                android:gravity="center"
                android:text="Cantidad pedidos"
                android:textAlignment="center"
                android:textSize="11.5sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:layout_marginStart="4sp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="15sp"
                android:backgroundTint="@color/md_theme_secondary"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingLeft="-5sp"
                android:paddingRight="-5sp"
                android:text="S/.500"
                android:textSize="14sp"
                app:backgroundTint="@color/md_theme_secondary" />

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="1.5sp"
                android:gravity="center"
                android:text="Gasto"
                android:textAlignment="center"
                android:textSize="11.5sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>