<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente.ClienteConfirmacionCompra">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="250sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_gravity="center_horizontal"
            android:text="Tu pedido ha sido recibido exitosamente"
            android:textColor="@color/light_green"
            android:textSize="40sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView3"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/check" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="#42"
            android:textColor="@color/light_green"
            android:textSize="55sp"
            android:textStyle="bold"
            />


        <Button
            android:id="@+id/goToMenu"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_green"
            android:text="Volver al menÃº"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="20sp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/followOrderButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorCustomColor1Container_mediumContrast"
            android:layout_gravity="center_horizontal"
            android:text="Seguir pedido"
            android:textColor="@color/white"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>