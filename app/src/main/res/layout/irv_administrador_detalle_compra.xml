<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="380sp"
        android:layout_height="100sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/card_detalle_venta"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="103sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15sp"
                android:layout_marginTop="13sp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/otroradius"
                app:srcCompat="@drawable/hamburguesa_royal" />
        </LinearLayout>

        <TextView
            android:id="@+id/nombrePlato"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18sp"
            android:layout_marginTop="26sp"
            android:text="Tocino con queso"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cantidad"
            android:layout_width="110sp"
            android:layout_height="match_parent"
            android:layout_marginStart="30sp"

            android:layout_marginTop="30sp"
            android:text="5 unidades"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>